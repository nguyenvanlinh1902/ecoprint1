{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Functions for EcoPrint",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "dev": "GOOGLE_APPLICATION_CREDENTIALS=\"../../serviceAccount.json\" firebase emulators:start --only functions --project=ecoprint1-3cd5c",
    "dev:minimal": "GOOGLE_APPLICATION_CREDENTIALS=\"../../serviceAccount.json\" FIRESTORE_EMULATOR_LOG_LEVEL=error FIREBASE_DEBUG=false firebase emulators:start --only functions --project=ecoprint1-3cd5c",
    "start:minimal": "NODE_ENV=production FIREBASE_DEBUG=false FIRESTORE_EMULATOR_LOG_LEVEL=error firebase emulators:start --only functions,firestore,storage",
    "serve:production-db": "firebase emulators:start --only functions,storage",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.0",
    "@koa/cors": "^4.0.0",
    "@koa/multer": "^3.1.0",
    "@koa/router": "^13.1.0",
    "bcrypt": "^5.1.1",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.3.1",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.6.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.4.1",
    "koa-ejs": "^4.3.0",
    "koa-helmet": "^8.0.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.1",
    "multer": "^1.4.5-lts.2",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
