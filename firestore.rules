rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Cho phép đọc/ghi cho người dùng đã đăng nhập
    match /userProfiles/{userId} {
      // Cho phép đọc cho người dùng đã xác thực là chính họ hoặc admin 
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Cho phép ghi cho người dùng đã xác thực là chính họ hoặc admin
      // Quan trọng: Cho phép create cho người vừa đăng ký (chưa xác thực email)
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Hỗ trợ tương thích ngược với collection users cũ
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Cho phép tạo mới cho người dùng mới đăng ký
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Hàm kiểm tra người dùng có quyền admin không
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Cho phép quản lý sản phẩm
    match /products/{productId} {
      allow read: if true; // Ai cũng có thể xem sản phẩm
      allow write: if request.auth != null && isAdmin(); // Chỉ admin mới có thể chỉnh sửa
    }
    
    // Cho phép quản lý đơn hàng
    match /orders/{orderId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Mặc định từ chối tất cả các truy cập khác
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 